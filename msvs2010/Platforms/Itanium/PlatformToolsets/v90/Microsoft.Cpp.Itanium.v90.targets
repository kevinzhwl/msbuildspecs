<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(VCTargetsPath)\Platforms\Itanium\PlatformToolsets\v90\ImportBefore\*.targets" Condition="Exists('$(VCTargetsPath)\Platforms\Itanium\PlatformToolsets\v90\ImportBefore')" />

  <UsingTask TaskName="VCMessage" AssemblyName="Microsoft.Build.CppTasks.Common, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a" />

  <PropertyGroup>
    <PlatformPrepareForBuildDependsOn>PlatformToolsetPrepareForBuild;$(PlatformPrepareForBuildDependsOn)</PlatformPrepareForBuildDependsOn>
  </PropertyGroup>

  <!-- *******************************************************************************************
        PlatformToolsetPrepareForBuild target
       ******************************************************************************************* -->
  <Target Name="PlatformToolsetPrepareForBuild" DependsOnTargets="_DetermineManagedStateFromCL;$(PlatformToolsetPrepareForBuildDependsOn)">
    <!-- If the project is targeting any other CLR version than v2.0, v3.0, v3.5, issue a warning -->
    <VCMessage Condition="'$(ManagedAssembly)' == 'true' and
                                  '$(TargetFrameworkVersion)' != 'v3.5' and
                                  '$(TargetFrameworkVersion)' != 'v3.0' and
                                  '$(TargetFrameworkVersion)' != 'v2.0' and '$(DesignTimeBuild)'!='true' "
            Code="MSB8002" Type="Warning" Arguments="$(PlatformToolset);$(TargetFrameworkVersion)"/>
    <VCMessage Condition="'$(VCInstallDir)'!='' and '$(PROCESSOR_ARCHITECTURE)'=='x86' and !Exists('$(VCInstallDir)bin\x86_ia64')" Code="MSB8014" Type="Error" Arguments="$(VCInstallDir)bin\x86_ia64" />
    <VCMessage Condition="'$(VCInstallDir)'!='' and '$(PROCESSOR_ARCHITECTURE)'=='' and !Exists('$(VCInstallDir)bin\ia64')" Code="MSB8014" Type="Error" Arguments="$(VCInstallDir)bin\ia64" />
  </Target>

  <Import Project="$(VCTargetsPath)\Platforms\Itanium\PlatformToolsets\v90\ImportAfter\*.targets" Condition="Exists('$(VCTargetsPath)\Platforms\Itanium\PlatformToolsets\v90\ImportAfter')" />
</Project>
